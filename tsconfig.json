{
  "compilerOptions": {
    "sourceMap": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-native",
    "lib": ["es2016"],
    "typeRoots": ["@types", "node_modules/@types"],
    "outDir": "./dist"
  },
  "include": ["./src/**/*"]
}
